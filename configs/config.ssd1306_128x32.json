{
  "_comment": "Configuration for 128x32 SSD1306 OLED displays. lines=2 (default): one rotating metric page per item using the full 32px height. lines=4: mirrors the 128x64 layout (header + separator + 3 content lines + load graph) using a compact 5x7 font so all info fits in 32 pixels.",
  "display": {
    "type": "ssd1306_128x32",
    "i2c_bus": "/dev/i2c-1",
    "i2c_address": "0x3C",
    "rotation": 0,
    "lines": 2
  },
  "pages": {
    "rotation_interval": "2s",
    "refresh_interval": "1s"
  },
  "system_info": {
    "hostname_display": "short",
    "disk_path": "/",
    "temperature_source": "/sys/class/thermal/thermal_zone0/temp",
    "temperature_unit": "celsius"
  },
  "network": {
    "auto_detect": true,
    "interface_filter": {
      "include": ["eth0", "wlan0", "usb0"],
      "exclude": ["lo", "docker*", "veth*"]
    },
    "show_ipv4": true,
    "show_ipv6": false,
    "max_interfaces_per_page": 1
  },
  "logging": {
    "level": "info",
    "output": "stdout"
  }
}
