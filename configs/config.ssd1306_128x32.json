{
  "_comment": "Configuration optimized for 128x32 displays. Layout automatically adapts: hostname always shown at top with separator line, one metric per page. System metrics rotate through disk, memory, and CPU temperature on separate pages for clarity.",
  "display": {
    "type": "ssd1306_128x32",
    "i2c_bus": "/dev/i2c-1",
    "i2c_address": "0x3C",
    "rotation": 0
  },
  "pages": {
    "rotation_interval": "2s",
    "refresh_interval": "1s"
  },
  "system_info": {
    "hostname_display": "short",
    "disk_path": "/",
    "temperature_source": "/sys/class/thermal/thermal_zone0/temp",
    "temperature_unit": "celsius"
  },
  "network": {
    "auto_detect": true,
    "interface_filter": {
      "include": ["eth0", "wlan0", "usb0"],
      "exclude": ["lo", "docker*", "veth*"]
    },
    "show_ipv4": true,
    "show_ipv6": false,
    "max_interfaces_per_page": 1
  },
  "logging": {
    "level": "info",
    "output": "stdout"
  }
}
