{
  "display": {
    "type": "ssd1306",
    "i2c_bus": "/dev/i2c-1",
    "i2c_address": "0x3C",
    "rotation": 0
  },
  "pages": {
    "rotation_interval": "5s",
    "refresh_interval": "2s"
  },
  "system_info": {
    "hostname_display": "short",
    "disk_path": "/",
    "temperature_source": "/sys/class/thermal/thermal_zone0/temp",
    "temperature_unit": "celsius"
  },
  "network": {
    "auto_detect": true,
    "interface_filter": {
      "include": ["wlan0", "usb0"],
      "exclude": ["lo"]
    },
    "show_ipv4": true,
    "show_ipv6": false,
    "max_interfaces_per_page": 2
  },
  "logging": {
    "level": "info",
    "output": "stdout",
    "json": false
  },
  "metrics": {
    "enabled": false,
    "address": "127.0.0.1:9090"
  },
  "screensaver": {
    "enabled": true,
    "mode": "dim",
    "idle_timeout": "10m",
    "dim_brightness": 50,
    "normal_brightness": 255
  }
}
